<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/gunlukkalorilinear"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/abc"

        >


    <TextView
        android:id="@+id/GünlükKalori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Günlük Gereken Kalori Hesapla"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:typeface="monospace"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="270dp"
        android:id="@+id/EndeksHesap"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"

        >

        <EditText
            android:id="@+id/editTextBoyGunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:minHeight="40dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:hint="Boyunuz:"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/editTextKiloGunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:minHeight="40dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/editTextBoy"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Kilonuz:"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/editTextYasGunluk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:minHeight="40dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/editTextBoy"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Yaşınız: "
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        >

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/erkekradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erkek"
            android:layout_marginLeft="25dp"

            />

        <RadioButton
            android:id="@+id/kadinradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Kadın"
            />

        </RadioGroup>
    </LinearLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"

            >

            <Button
                android:id="@+id/verilerigetir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKilo"
                android:layout_centerHorizontal="true"
                android:text="Verileri GETİR"
                android:backgroundTint="@color/md_amber_900"
                />
            <Button
                android:id="@+id/SonucEndeksGunluk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKilo"
                android:layout_centerHorizontal="true"
                android:text="Hesapla"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/md_amber_900"
                />




        </LinearLayout>

        <TextView
            android:id="@+id/sonucEndeksTextViewGunluk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            />

    </LinearLayout>



    </LinearLayout>


</RelativeLayout>